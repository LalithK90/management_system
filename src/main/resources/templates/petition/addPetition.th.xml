<thlogic xmlns:th="http://www.thymeleaf.org">
    <attr sel="#header" th:replace="~{fragments/header :: headerFragment}"/>
    <attr sel="#navBar" th:replace="~{fragments/navBar :: navBarFragment}"/>
    <!--form header-->
    <attr sel="#formHeader" th:text="${addStatus==true?'Make A Petition ':'Update A Petition Details'}"/>

    <!--Form -->
    <attr sel="#form" th:action="${'/petition/add'}" th:object="${petition}"/>
    <!--Village-->
    <attr sel="#village" th:field="*{petition.village}"/>
    <!--Division-->
    <attr sel="#agaDivision" th:field="*{petition.agaDivision}"/>
    <!--provinces-->
    <attr sel="#provinceSelectList" th:each="province : ${provinces}"
          th:text="${province.province}"
          th:value="${province}"/>
    <!--Petition Type-->
    <attr sel="#petitionType" th:field="*{petition.petitionType}"/>
    <attr sel="#petitionTypeList" th:each="petitionType : ${petitionTypes}"
          th:text="${petitionType.petitionType}"
          th:value="${petitionType}"/>
    <!--Relevant Station-->
    <attr sel="#station" th:field="*{petition.workingPlace}"/>
    <!--Petition subject-->
    <attr sel="#subject" th:field="*{petition.subject}"/>
    <!--Minute petition details -->
    <attr sel="#description" th:name="${'minutePetitions[0].detail'}"/>
    <!--Direct to petition -->
    <attr sel="#directedTo" th:fragment="directedToFragment"/>
    <!--Relevant Station -->
    <attr sel="#stations" th:name="${'minutePetitions[0].workingPlace'}"/>
    <!--Relevant Employee-->
    <attr sel="#employees"  th:name="${'minutePetitions[0].employee'}"/>
    <!--Designation -->
    <attr sel="#designationList" th:each="designation : ${designations}"
          th:text="${designation.designation}"
          th:value="${designation}"/>
    <!--Petition priority-->
    <attr sel="#petitionPriority" th:field="*{petition.petitionPriority}">
        <attr sel="#petitionPriorityList" th:each="petitionPriority : ${petitionPriorities}"
              th:text="${petitionPriority.petitionPriority}"
              th:value="${petitionPriority}"/>
    </attr>
    <!--Petitioner Details-->
    <!--Id-->
    <attr sel="#petitionerId" th:field="*{petition.petitioner.id}"/>
    <!--Name in sinhala-->
    <attr sel="#nameSinhala" th:field="*{petition.petitioner.nameSinhala}"/>
    <attr sel="#nameSinhalaError" th:errors="*{petition.petitioner.nameSinhala}"
          th:if="${#fields.hasErrors('petition.petitioner.nameSinhala')}"/>
    <!--Name in tamil-->
    <attr sel="#nameTamil" th:field="*{petition.petitioner.nameTamil}"/>
    <attr sel="#nameTamilError" th:errors="*{petition.petitioner.nameTamil}"
          th:if="${#fields.hasErrors('petition.petitioner.nameTamil')}"/>
    <!--Name in English-->
    <attr sel="#nameEnglish" th:field="*{petition.petitioner.nameEnglish}"/>
    <attr sel="#nameEnglishError" th:errors="*{petition.petitioner.nameEnglish}"
          th:if="${#fields.hasErrors('petition.petitioner.nameEnglish')}"/>
    <!--Email-->
    <attr sel="#email" th:field="*{petition.petitioner.email}"/>
    <attr sel="#emailError" th:errors="*{petition.petitioner.email}"
          th:if="${#fields.hasErrors('petition.petitioner.email')}"/>
    <!--Land-->
    <attr sel="#land" th:field="*{petition.petitioner.land}"/>
    <attr sel="#landError" th:errors="*{petition.petitioner.land}"
          th:if="${#fields.hasErrors('petition.petitioner.land')}"/>
    <!--Address-->
    <attr sel="#address" th:field="*{petition.petitioner.address}"/>
    <attr sel="#addressError" th:errors="*{petition.petitioner.address}"
          th:if="${#fields.hasErrors('petition.petitioner.address')}"/>
    <!--Mobile One-->
    <attr sel="#mobileOne" th:field="*{petition.petitioner.mobileOne}"/>
    <attr sel="#mobileOneError" th:errors="*{petition.petitioner.mobileOne}"
          th:if="${#fields.hasErrors('petition.petitioner.mobileOne')}"/>
    <!--Mobile two-->
    <attr sel="#mobileTwo" th:field="*{petition.petitioner.mobileTwo}"/>
    <attr sel="#mobileTwoError" th:errors="*{petition.petitioner.mobileTwo}"
          th:if="${#fields.hasErrors('petition.petitioner.mobileTwo')}"/>
    <!--Created by and created at-->
    <attr sel="#createdBy" th:field="*{petition.petitioner.createdBy}"/>
    <attr sel="#createdAt" th:field="*{{petition.petitioner.createdAt}}"/>

    <!--Button-->
    <attr sel="#submit" th:text="${addStatus==true?'Save': 'Update'}"/>


    <!--URL Comes -->
    <attr sel="#districtUrl" th:value="${districtUrl}"/>
    <attr sel="#stationUrl" th:value="${stationUrl}"/>
    <attr sel="#employeeUrl" th:value="${employeeUrl}"/>
    <attr sel="#petitionerUrl" th:value="${petitionerUrl}"/>

    <!--Script -->
    <attr sel="#footer" th:replace="~{fragments/footer :: footerFragment}"/>
    <attr sel="#script" th:replace="~{fragments/script :: scriptFragment}"/>
    <attr sel="#customJS" th:src="@{/js/stationFindUsingProvince.js}"/>
    <attr sel="#customScript" th:src="@{/js/employeeFindUsingWorkingPlace.js}"/>
</thlogic>